{
  "name": "seedream-naming-scanner",
  "version": "1.0.0",
  "description": "SeeDream 命名标准化扫描和分析工具",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "scan": "tsx src/cli.ts scan",
    "validate": "tsx src/cli.ts validate",
    "validate-env": "tsx src/cli.ts validate-env",
    "validate-reports": "tsx src/cli.ts validate-reports",
    "validate-ci": "tsx src/cli.ts validate-ci",
    "test": "jest",
    "clean": "rm -rf dist"
