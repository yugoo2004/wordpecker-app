# 环境变量配置示例文件
# 复制此文件为 .env 并填入实际的API密钥

# 基本配置
NODE_ENV=development
PORT=3000

# 数据库配置
MONGODB_URL=mongodb://localhost:27017/wordpecker

# 图片服务配置
PEXELS_API_KEY=your_pexels_api_key_here

# 火山引擎统一认证配置（豆包1.6、SeeDream 3.0、语音合成共用）
VOLCENGINE_ACCESS_KEY_ID=your_volcengine_access_key_id
VOLCENGINE_SECRET_ACCESS_KEY=your_volcengine_secret_access_key

# 豆包1.6模型配置
DOUBAO_API_KEY=your_doubao_api_key  # 可选，如果已配置Access Key
DOUBAO_ENDPOINT=your_doubao_endpoint_id  # 必需：豆包模型端点ID
DOUBAO_MODEL=doubao-pro-32k
DOUBAO_REGION=cn-beijing

# 火山引擎语音合成配置
VOLCENGINE_API_KEY=your_volcengine_api_key  # 可选，如果已配置Access Key
VOLCENGINE_APP_ID=your_volcengine_app_id  # 必需：TTS应用ID
VOLCENGINE_CLUSTER=volcano_tts
VOLCENGINE_VOICE_TYPE=BV700_streaming
VOLCENGINE_REGION=cn-north-1

# SeeDream 3.0图像生成配置
SEEDREAM_API_KEY=your_seedream_api_key  # 可选，如果已配置Access Key
SEEDREAM_MODEL=seedream-3.0

# AI服务优先级设置
AI_PROVIDER=doubao
VOICE_PROVIDER=volcengine  
IMAGE_PROVIDER=seedream

# 服务冗余配置
FAILOVER_RETRY_ATTEMPTS=3
FAILOVER_TIMEOUT_MS=30000
FAILOVER_COOLDOWN_MS=300000
FAILOVER_PROVIDERS=glm,moonshot,qwen

# 备选AI服务配置（用于故障转移）
# GLM智谱AI
GLM_API_KEY=your_glm_api_key
GLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4
GLM_TEXT_MODEL=glm-4.5
GLM_VOICE_MODEL=glm-4-voice

# Moonshot AI
MOONSHOT_API_KEY=your_moonshot_api_key
MOONSHOT_BASE_URL=https://api.moonshot.cn/v1
MOONSHOT_MODEL=moonshot-v1-8k

# 通义千问
QWEN_API_KEY=your_qwen_api_key
QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
QWEN_MODEL=qwen-plus

# ElevenLabs（可选的国外语音服务）
ELEVENLABS_API_KEY=your_elevenlabs_api_key