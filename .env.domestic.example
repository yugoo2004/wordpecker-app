# WordPecker 国产化AI服务配置示例
# 复制此文件为 .env 并填入真实的 API 密钥

# ===== 核心服务配置 =====
PORT=3000
NODE_ENV=development
MONGODB_URL=mongodb://localhost:27017/wordpecker

# ===== 国产AI文本生成服务 (按优先级排序) =====

# 1. GLM (智谱AI) - 主要服务 ⭐
GLM_API_KEY=your_glm_api_key_here
GLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4
GLM_TEXT_MODEL=glm-4.5
GLM_VOICE_MODEL=glm-4-voice

# 2. Moonshot AI - 备选服务
MOONSHOT_API_KEY=your_moonshot_api_key_here
MOONSHOT_BASE_URL=https://api.moonshot.cn/v1
MOONSHOT_MODEL=moonshot-v1-8k

# 3. Qwen (通义千问) - 阿里云
QWEN_API_KEY=your_qwen_api_key_here
QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
QWEN_MODEL=qwen-plus

# 4. MiniMax - 海螺AI
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_BASE_URL=https://api.minimax.chat/v1
MINIMAX_MODEL=abab6.5s-chat

# 5. Baichuan - 百川智能
BAICHUAN_API_KEY=your_baichuan_api_key_here
BAICHUAN_BASE_URL=https://api.baichuan-ai.com/v1
BAICHUAN_MODEL=Baichuan2-Turbo

# ===== 国产语音合成服务 =====

# GLM-4-voice (已配置在上方)
VOICE_PROVIDER=glm

# MiniMax 语音 (备选)
MINIMAX_VOICE_API_KEY=your_minimax_voice_key
MINIMAX_VOICE_MODEL=speech-01

# 豆包 (字节跳动) 语音服务
DOUBAO_API_KEY=your_doubao_api_key
DOUBAO_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
DOUBAO_VOICE_MODEL=doubao-voice

# ===== 向后兼容配置 =====
# 这些会被上面的配置覆盖，但保持兼容性
OPENAI_API_KEY=your_moonshot_api_key_here
OPENAI_BASE_URL=https://api.moonshot.cn/v1
OPENAI_MODEL=moonshot-v1-8k
AI_PROVIDER=glm

# ===== 可选服务 =====
# ElevenLabs (国外语音服务，作为最后备选)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Pexels 图片API
PEXELS_API_KEY=your_pexels_api_key_here

# ===== 性能优化配置 =====
# 失败冷却时间 (分钟)
AI_FAILURE_COOLDOWN=5
VOICE_FAILURE_COOLDOWN=5

# API 超时时间 (秒)
AI_REQUEST_TIMEOUT=30
VOICE_REQUEST_TIMEOUT=60

# ===== 获取API密钥的官方链接 =====
# GLM (智谱AI): https://open.bigmodel.cn/
# Moonshot AI: https://platform.moonshot.cn/
# Qwen (通义千问): https://dashscope.console.aliyun.com/
# MiniMax: https://www.minimax.chat/
# Baichuan: https://platform.baichuan-ai.com/
# 豆包: https://console.volcengine.com/ark